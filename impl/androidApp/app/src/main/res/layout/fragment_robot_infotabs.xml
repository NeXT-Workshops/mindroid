
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.home.RobotSetupInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TabHost
            android:id="@+id/tabHost_info_robotSetup"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/tab_config_sensors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_title_port_sensors"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Port"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_port_s1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1" />

                            <TextView
                                android:id="@+id/txt_port_s2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2" />

                            <TextView
                                android:id="@+id/txt_port_s3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="3" />

                            <TextView
                                android:id="@+id/txt_port_s4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="4" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_title_sensorType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sensor"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_sensor_s1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ColorSensor" />

                            <TextView
                                android:id="@+id/txt_sensor_s2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ColorSensor" />

                            <TextView
                                android:id="@+id/txt_sensor_s3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ColorSensor" />

                            <TextView
                                android:id="@+id/txt_sensor_s4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ColorSensor" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_tilte_mode"
                                android:layout_width="82dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Mode"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_sensormode_s1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="RGB" />

                            <TextView
                                android:id="@+id/txt_sensormode_s2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="RGB" />

                            <TextView
                                android:id="@+id/txt_sensormode_s3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="RGB" />

                            <TextView
                                android:id="@+id/txt_sensormode_s4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="RGB" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab_config_motors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_title_port_motors"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Port"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_port_A"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="A" />

                            <TextView
                                android:id="@+id/txt_port_B"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="B" />

                            <TextView
                                android:id="@+id/txt_port_C"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="C" />

                            <TextView
                                android:id="@+id/txt_port_D"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="D" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_title_motors"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Motor"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_motor_A"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.76"
                                android:text="ColorSensor" />

                            <TextView
                                android:id="@+id/txt_motor_B"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ColorSensor" />

                            <TextView
                                android:id="@+id/txt_motor_C"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ColorSensor" />

                            <TextView
                                android:id="@+id/txt_motor_D"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ColorSensor" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab_connection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_title_robot_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Robot-ID" />

                            <TextView
                                android:id="@+id/txt_title_group_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Group-ID" />

                            <TextView
                                android:id="@+id/txt_title_brickConnInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="EV3-Brick-IP" />

                            <TextView
                                android:id="@+id/txt_title_msgServer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="MSG-Server-IP" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_robot_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/txt_group_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/txt_conn_brick"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/txt_conn_msgServer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="192.168.42:20194" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </TabHost>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <include
            layout="@layout/seperator"
            android:layout_width="match_parent" />

    </LinearLayout>

</FrameLayout>
